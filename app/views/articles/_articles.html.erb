<% articles.each do |article| %>
<div class="p-4 border border-gray-300 rounded-lg my-2 shadow">
  <h2 class="text-2xl font-bold text-purple-700"><%= article.title %></h2>
  <p class="text-gray-700"><%= article.body %></p>
  <p class="text-gray-700">written by <%= article.author %></p>

  <p><%= link_to "Show this article", article, class: "text-blue-400" %></p>
</div>
<% end %>
